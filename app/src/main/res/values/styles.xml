<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- The launcher theme. It sets the main window background to the launch_screen drawable -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="ProgressBar.App" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="SearchView.App" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search_white</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="searchHintIcon">@drawable/ic_search_white_hint</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.App" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.App.Link">
        <item name="android:textColor">@color/link_selector</item>
    </style>

    <style name="TextAppearance.App.WhiteButton">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.App.Big">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.App.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Bold.18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.App.Chip">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.App.WhiteSelector">
        <item name="android:textColor">@color/item_sort_selector_text</item>
    </style>

    <style name="TextAppearance.App.Title">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.ActionBar.Title
        </item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.App.Title.Categories">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.App.Title.Desc">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.App.Bold.TitleRed">
        <item name="android:textColor">@color/red_dark</item>
    </style>

    <style name="ToolbarTheme.App" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">
            ?android:selectableItemBackgroundBorderless
        </item>
        <item name="colorControlHighlight">@color/gray1</item>
    </style>

    <style name="ProgressBar.App.Blue">
        <item name="colorAccent">@color/blue_light</item>
    </style>

    <style name="Dialog.App" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButton.App</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButton.App</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="NegativeButton.App" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/blue_light</item>
    </style>

    <style name="PositiveButton.App" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/blue_light</item>
    </style>

    <style name="EditText.App" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlActivated">@color/blue_light</item>
        <item name="colorControlHighlight">@android:color/black</item>
    </style>
</resources>
