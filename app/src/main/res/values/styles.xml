<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProgressBarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:theme">@style/ToolbarTheme</item>
        <item name="android:elevation">8dp</item>
        <item name="popupTheme">@style/PopupToolbarTheme</item>
    </style>

    <style name="PopupToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Gets rid of the search icon -->
        <item name="searchIcon">@drawable/ic_search_white</item>
        <!-- Gets rid of the "underline" in the text -->
        <item name="queryBackground">@android:color/transparent</item>
        <!-- Gets rid of the search icon when the SearchView is expanded -->
        <item name="searchHintIcon">@drawable/ic_search_white_hint</item>
        <!-- The hint text that appears when the user has not typed anything -->
        <!--<item name="queryHint">@string/search_hint</item>-->
    </style>


    <style name="mainTextStyle"  parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="mainTextStyleBold"  parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textWhiteStyle"  parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textChipStyle"  parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/chip_selector</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="mainTextStyleWhiteSelector" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/item_sort_selector_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="mainTextStyleBlueBold"  parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textTitleStyle"  parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textTitleRedBoldStyle"  parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/red_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
