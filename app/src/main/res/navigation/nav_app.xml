<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:startDestination="@id/splashFragment"
            >

    <fragment android:id="@+id/splashFragment"
              android:name="com.zakrodionov.roskachestvo.app.ui.splash.SplashFragment"
              android:label="SplashFragment">
        <action
                android:id="@+id/action_splashFragment_to_homeFragment"
                app:destination="@id/researchFragment"
                app:enterAnim="@android:anim/fade_in"
                app:exitAnim="@android:anim/fade_out"
                app:popEnterAnim="@android:anim/fade_in"
                app:popExitAnim="@android:anim/fade_out"
                app:popUpTo="@id/splashFragment"
                app:popUpToInclusive="true"

        />
    </fragment>


    <fragment android:id="@+id/barcodeFragment"
              android:name="com.zakrodionov.roskachestvo.app.ui.barcode.BarcodeFragment"
              android:label="BarcodeFragment">
        <action android:id="@+id/action_barcodeFragment_to_splashFragment"
                app:destination="@id/splashFragment"
                app:popUpTo="@+id/splashFragment"
                app:popUpToInclusive="true"
        />
    </fragment>

    <fragment android:id="@+id/favoritesFragment"
              android:name="com.zakrodionov.roskachestvo.app.ui.favorites.FavoritesFragment"
              android:label="FavoritesFragment">
        <action android:id="@+id/action_favoritesFragment_to_splashFragment"
                app:destination="@id/splashFragment"
                app:popUpTo="@+id/splashFragment"
                app:popUpToInclusive="true"
        />
    </fragment>

    <fragment android:id="@+id/researchFragment"
              android:name="com.zakrodionov.roskachestvo.app.ui.research.ResearchFragment"
              android:label="ResearchFragment">
        <action android:id="@+id/action_researchFragment_to_splashFragment"
                app:destination="@id/splashFragment"
                app:popUpTo="@+id/splashFragment"
                app:popUpToInclusive="true"
        />
    </fragment>

    <fragment android:id="@+id/searchFragment"
              android:name="com.zakrodionov.roskachestvo.app.ui.search.SearchFragment"
              android:label="SearchFragment">
        <action android:id="@+id/action_searchFragment_to_splashFragment"
                app:destination="@id/splashFragment"
                app:popUpTo="@+id/splashFragment"
                app:popUpToInclusive="true"
        />
    </fragment>


</navigation>