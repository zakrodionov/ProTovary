<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/default_margin_5"
    android:paddingBottom="@dimen/default_margin_5">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/gray3"
        app:cardCornerRadius="@dimen/default_margin_10">

        <TextView xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/tvDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin_10"
            android:textAppearance="@style/TextAppearance.App"
            tools:text="Example" />

    </androidx.cardview.widget.CardView>

</FrameLayout>

