<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/default_margin_10">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_start_margin_20"
        android:layout_marginTop="@dimen/default_top_margin_20"
        android:text="@string/sort"
        android:textAppearance="@style/TextAppearance.App.Bold"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginTop="@dimen/default_margin_10"
        android:background="@color/gray1" />

    <RelativeLayout
        android:id="@+id/rlRatingDecrease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_sort_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/default_start_margin_20"
            android:layout_marginTop="@dimen/default_margin_15"
            android:layout_marginBottom="@dimen/default_margin_15"
            android:duplicateParentState="true"
            android:text="@string/by_decrease_rating"
            android:textAppearance="@style/TextAppearance.App.WhiteSelector" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/default_end_margin_20"
            android:src="@drawable/ic_done" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlRatingIncrease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_sort_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/default_start_margin_20"
            android:layout_marginTop="@dimen/default_margin_15"
            android:layout_marginBottom="@dimen/default_margin_15"
            android:duplicateParentState="true"
            android:text="@string/by_increase_rating"
            android:textAppearance="@style/TextAppearance.App.WhiteSelector" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/default_end_margin_20"
            android:src="@drawable/ic_done" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlTradeMark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_sort_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/default_start_margin_20"
            android:layout_marginTop="@dimen/default_margin_15"
            android:layout_marginBottom="@dimen/default_margin_15"
            android:duplicateParentState="true"
            android:text="@string/by_trademark"
            android:textAppearance="@style/TextAppearance.App.WhiteSelector" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/default_end_margin_20"
            android:src="@drawable/ic_done" />

    </RelativeLayout>

</LinearLayout>